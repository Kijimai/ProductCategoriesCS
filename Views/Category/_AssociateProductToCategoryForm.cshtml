@model Association
<div class="flex-grow-0">
  <form asp-action="AssociateProductToCategory" asp-controller="Category" method="POST">
    <h3>Add Product:</h3>
    <div class="mb-4">
      <span asp-validation-for="ProductId"></span>
      <select asp-for="ProductId">
        @foreach (Product product in ViewBag.AllExistingProducts)
        {
          <option value="@product.ProductId">@product.Name</option>
        }
      </select>
    </div>
    <input asp-for="CategoryId" type="hidden" value="@ViewBag.CurrentCategoryId">
    <button>Add</button>
  </form>
</div>
